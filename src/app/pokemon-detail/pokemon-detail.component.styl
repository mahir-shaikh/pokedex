/* HeroDetailComponent's private CSS styles */
label {
  display: inline-block;
  width: 3em;
  margin: .5em 0;
  color: #607D8B;
  font-weight: bold;
}
input {
  height: 2em;
  font-size: 1em;
  padding-left: .4em;
}
button {
  margin-top: 20px;
  font-family: Arial;
  background-color: #eee;
  border: none;
  padding: 5px 10px;
  border-radius: 4px;
  cursor: pointer; cursor: hand;
}
button:hover {
  background-color: #cfd8dc;
}
button:disabled {
  background-color: #eee;
  color: #ccc;
  cursor: auto;
}


.card-wrapper
  border 1px solid #0003
  border-radius 20px
  margin 15px
  box-shadow 1px 1px 3px 2px #eee
  max-width 400px
  .top-section
    padding 15px
  .bottom-section
    padding 15px
    border 1px solid #FFF
    border-radius 20px
    box-shadow 0px -1px 0px 0px #ececec

.pokemon-name
  text-transform capitalize
  font-weight bold

.type-container
  .badge
    margin 0 5px

.image-container
  text-align center
  .image
    height 96px

.data
  &-row
    padding 5px 0
  &-label
    color #607d8b
    font-size 0.8rem
    text-transform capitalize
    white-space nowrap
  &-value
    font-size 0.8rem
    font-weight 600
  &-header 
    font-size 1.2rem
    font-weight 600
  &-info
    text-transform capitalize
    font-size 0.8rem
    color #607d8b

.stat-row
  padding 5px 0
  .data-value
    text-align right

ul
  list-style: none;
  padding-left: 15px;
  