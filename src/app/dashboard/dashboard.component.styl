/* DashboardComponent's private CSS styles */
[class*='col-'] {
  float: left;
  padding-right: 20px;
  padding-bottom: 20px;
}
[class*='col-']:last-of-type {
  padding-right: 0;
}
a {
  text-decoration: none;
}
*, *:after, *:before {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
h3 {
  text-align: center;
  margin-bottom: 0;
}
h4 {
  position: relative;
}

.module
  padding: 20px;
  text-align: center;
  border-radius: 20px;
  color: #607d8b;
  border 1px solid #0003
  border-radius 20px
  box-shadow 1px 1px 3px 2px #eee
  max-width: 300px;
  margin: 10px auto;
  &:hover
    cursor: pointer;
  .pokemon-name
    text-transform uppercase


.image-container
  .image
    height 96px